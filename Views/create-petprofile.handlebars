<form class="cpp-form">
    <div class="cpp-table">
        <div>
            <label for="dogname-cpp">Dog's Name: </label>
            <input type="text" id="dogname-cpp" />
        </div>
        <div>
            <label for="breed-cpp"> Breed: </label>
            <input type="text" id="breed-cpp" />
        </div>
        <div>
            <label for="sex-cpp"> Sex: </label>
            <select id="sex-cpp" > 
                <option value="female"> Female </option>
                <option value="male"> Male </option>
            </select>
        </div>
        <div>
            <label for="age-cpp"> Age: </label>
            <input type="text" id="age-cpp" />
        </div>
        <div>
            <label for="pet_bio-cpp"> Pet Bio: </label>
            <input type="text" id="pet_bio-cpp" />
        </div>
        <div>
            <button type="submit"> Create Pet Profile </button>
        </div>
    </div>
</form>
<script src="/js/addPet.js"></script>